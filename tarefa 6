programa
{
	inclua biblioteca Util--> u
	
	funcao inicio()
	{
		
          inteiro deguemon, antedeguemon
          inteiro num[30]
          para(inteiro i=0; i < 30; i++)
             num[i] = u.sorteia(1, 15)
            
              escreva ("Digite um numero: ")
              leia(deguemon)
              escreva("O numero escolhido está nas posições ")
              antedeguemon = 0
              para(inteiro i=0; i < 30; i++){
              	se(deguemon == num[1]){
              		escreva(i,",")
              		antedeguemon++
              	}
              }
         escreva("O numero foi repetido " , antedeguemon, "vezes. ")



















	}
}
